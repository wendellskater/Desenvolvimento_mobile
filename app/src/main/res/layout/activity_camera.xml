<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CameraActivity"
    android:background="#001111">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/logo"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout3">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1000px"
        android:layout_height="600px"
        android:background="#778888"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="top"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">

        <RelativeLayout
            android:id="@+id/camera_preview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </RelativeLayout>

    </RelativeLayout>

    <!--
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"/>
    -->
    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:id="@+id/javaCameraView1"
        android:src="@drawable/ic_launcher"/>

    <RelativeLayout
        android:layout_width="200px"
        android:layout_height="100px"
        android:background="@drawable/repetir"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="top"
        android:clickable="true"
        android:onClick="btnRepetir"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout4">
    </RelativeLayout>

   <!-- <Button
        android:layout_width="150px"
        android:layout_height="100px"
        android:icon="@drawable/capturar"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="top"
        android:clickable="true"
        android:onClick="fotografar"
        android:id="@+id/relativeLayout4"
        android:inputType="textNoSuggestions"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true">
    </Button>
    -->
    <RelativeLayout
        android:layout_width="200px"
        android:layout_height="100px"
        android:background="@drawable/salvar"
        android:layout_gravity="top"
        android:clickable="true"
        android:onClick="onPictureTaken"
        android:gravity="right"
        android:layout_alignTop="@+id/relativeLayout4"
        android:layout_alignRight="@+id/javaCameraView1"
        android:layout_alignEnd="@+id/javaCameraView1"
        android:id="@+id/relativeLayout5">
    </RelativeLayout>

    <!--<RelativeLayout
        android:layout_width="360px"
        android:layout_height="100px"
        android:background="@drawable/home"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="top"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="botaoExibirNovaTela">
     </RelativeLayout>-->

    <RelativeLayout
        android:layout_width="360px"
        android:layout_height="100px"
        android:background="@drawable/home"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_gravity="top"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="btnVoltaInicio">

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fotografar"
        android:onClick="fotografar"
        android:id="@+id/fotografar"
        android:layout_alignBottom="@+id/relativeLayout4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
